{% extends 'layouts/base.njk' %}

{% block head_js %}
<script>
  if (document.cookie && Array.prototype.find) {
    var locale = document.cookie
      .split('; ')
      .find(function(row) {return row.startsWith('locale')});
    if (locale)
      locale = locale.split('=')[1];
    var role = document.cookie
      .split('; ')
      .find(function(row) {return row.startsWith('role')});
    if (role)
      role = role.split('=')[1];

    if (locale && role)
      window.location.assign('/' + locale + '/' + role + '/');
  }
</script>
{% endblock %}

